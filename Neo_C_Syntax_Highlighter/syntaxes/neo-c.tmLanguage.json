{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Neo-C",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#libraries"
		},
		{
			"include": "#dataTypes"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.neo-c",
				"match": "\\b(if|while|for|do|return|break|in|export|else)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.neo-c",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape.neo-c",
				"match": "\\\\."
			}]
		},
		"libraries": {
			"patterns": [{
				"name": "",
				"match": "(import) .+ (\\<.+\\>)",
				"captures": {
					"1": {"name": "keyword.control.neo-c"},
					"2": {"name": "string.quoted.double.neo-c"}
				}
			}]
		},
		"dataTypes": {
			"patterns": [{
				"name": "storage.type.neo-c",
				"match": "\\b(auto|bool|i8|i16|i32|i64|u8|char|u16|u32|u64|string|dynamic|true|false)\\b"
			}]
		},
		"literals": {
			"patterns": [{
				"name": "constant.numeric.neo-c",
				"match": "(?<![a-zA-Z])-?\\b\\d+\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.neo-c",
				"match": "\\w+(?=\\()"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.neo-c",
				"match": "\\b[a-zA-Z](?!\\()\\b|\\b[a-zA-Z][a-zA-Z0-9]+(?!\\()\\b"
			}]
		}
	},
	"scopeName": "source.nc"
}