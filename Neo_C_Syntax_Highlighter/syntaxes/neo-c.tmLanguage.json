{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Neo-C",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#characters"
		},
		{
			"include": "#libraries"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#dataTypes"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#camelCase"
		},
		{
			"include": "#screamCase"
		},
		{
			"include": "#multiLineComments"
		},
		{
			"include": "#singleLineComments"
		},
		{
			"include": "#pascalCase"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.neo-c",
				"match": "\\b(if|while|for|do|return|break|in|export|else|match|case|default|try|catch|throw|continue|init)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.neo-c",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.neo-c",
					"match": "\\\\."
				},
				{
					"name": "storage.type.neo-c",
					"begin": "(?<!\\\\)\\${",
					"end": "}",
					"patterns": [{
						"include": "$self"
					}]
				}
			]
		},
		"characters": {
			"patterns": [{
				"name": "string.quoted.single.neo-c",
				"match": "'.{1}'"
			}]
		},
		"libraries": {
			"patterns": [{
				"name": "",
				"match": "(import) .+ (\\<.+\\>)",
				"captures": {
					"1": {"name": "keyword.control.neo-c"},
					"2": {"name": "string.quoted.double.neo-c"}
				}
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.neo-c",
				"match": "\\w+(?=[\\(|\\<])"
			}]
		},
		"dataTypes": {
			"patterns": [{
				"name": "storage.type.neo-c",
				"match": "\\b(auto|bool|i8|i16|i32|i64|u8|char|u16|u32|u64|f32|f64|string|dynamic|true|false|void|const|enum|class|struct|union|requirement|public|private|protected|null|nullptr|pure|virtual|inherits)\\b"
			}]
		},
		"literals": {
			"patterns": [{
				"name": "constant.numeric.neo-c",
				"match": "(?<![a-zA-Z])-?\\b\\d+\\b"
			}]
		},
		"camelCase": {
			"patterns": [{
				"name": "variable.neo-c",
				"match": "\\b_?[a-z](?!\\()\\b|\\b_?[a-z][a-zA-Z0-9]+(?!\\()\\b"
			}]
		},
		"screamCase": {
			"patterns": [{
				"name": "variable.neo-c",
				"match": "\\b_?[A-Z](?!\\()\\b|\\b_?[A-Z][A-Z0-9_]+(?!\\()\\b"
			}]
		},
		"multiLineComments": {
			"patterns": [{
				"name": "comment.block.neo-c",
				"begin": "\\/\\*",
				"end": "\\*\\/",
				"patterns": [{
					"include": "#multiLineComments"
				}]
			}]
		},
		"singleLineComments" : {
			"patterns": [{
				"name": "comment.line.double-slash.neo-c",
				"match": "\/\/.*"
			}]
		},
		"pascalCase": {
			"patterns": [{
				"name": "entity.name.type.neo-c",
				"match": "\\b_?[A-Z](?!\\()\\b|\\b_?[A-Z][a-zA-Z0-9]+(?!\\()\\b"
			}]
		}
	},
	"scopeName": "source.nc"
}